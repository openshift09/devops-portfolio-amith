pipeline {
  agent any
  environment {
    DOCKERHUB_NAMESPACE = 'bkshivani' // change to your Docker Hub username
    IMAGE_TAG = "latest"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Node.js Image') {
      steps {
        dir('node-app') {
          sh "docker build -t ${DOCKERHUB_NAMESPACE}/node-cicd-app:${IMAGE_TAG} ."
        }
      }
    }

    stage('Build Python Image') {
      steps {
        dir('python-app') {
          sh "docker build -t ${DOCKERHUB_NAMESPACE}/python-cicd-app:${IMAGE_TAG} ."
        }
      }
    }

    stage('Build Go Image') {
      steps {
        dir('go-app') {
          sh "docker build -t ${DOCKERHUB_NAMESPACE}/go-cicd-app:${IMAGE_TAG} ."
        }
      }
    }

    stage('Run Basic Tests') {
      steps {
        // simple smoke tests: run containers and curl endpoints (optional)
        script {
          sh "docker run -d --name smoke-node -p 3001:3000 ${DOCKERHUB_NAMESPACE}/node-cicd-app:${IMAGE_TAG}"
          sh "sleep 2"
          sh "curl -f http://localhost:3001 || (docker logs smoke-node; exit 1)"
          sh "docker rm -f smoke-node || true"

          sh "docker run -d --name smoke-py -p 5001:5000 ${DOCKERHUB_NAMESPACE}/python-cicd-app:${IMAGE_TAG}"
          sh "sleep 2"
          sh "curl -f http://localhost:5001 || (docker logs smoke-py; exit 1)"
          sh "docker rm -f smoke-py || true"

          sh "docker run -d --name smoke-go -p 8081:8080 ${DOCKERHUB_NAMESPACE}/go-cicd-app:${IMAGE_TAG}"
          sh "sleep 2"
          sh "curl -f http://localhost:8081 || (docker logs smoke-go; exit 1)"
          sh "docker rm -f smoke-go || true"
        }
      }
    }

    stage('Login to Docker Hub & Push') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
          sh '''
            echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
            docker push ${DOCKERHUB_NAMESPACE}/node-cicd-app:${IMAGE_TAG}
            docker push ${DOCKERHUB_NAMESPACE}/python-cicd-app:${IMAGE_TAG}
            docker push ${DOCKERHUB_NAMESPACE}/go-cicd-app:${IMAGE_TAG}
          '''
        }
      }
    }

    stage('Deploy to Kubernetes (optional)') {
      when {
        expression { return env.DEPLOY_TO_K8S == 'true' }
      }
      steps {
        withCredentials([string(credentialsId: 'kubeconfig', variable: 'KUBECONFIG_CONTENT')]) {
          sh '''
            mkdir -p $WORKSPACE/.kube
            echo "$KUBECONFIG_CONTENT" > $WORKSPACE/.kube/config
            export KUBECONFIG=$WORKSPACE/.kube/config

            # replace image tags in k8s manifests (or use helm)
            kubectl set image deployment/node-deploy node=${DOCKERHUB_NAMESPACE}/node-cicd-app:${IMAGE_TAG} --namespace=default || true
            kubectl set image deployment/python-deploy python=${DOCKERHUB_NAMESPACE}/python-cicd-app:${IMAGE_TAG} --namespace=default || true
            kubectl set image deployment/go-deploy go=${DOCKERHUB_NAMESPACE}/go-cicd-app:${IMAGE_TAG} --namespace=default || true
          '''
        }
      }
    }
  } // stages

  post {
    always {
      sh 'docker system prune -af || true'
    }
  }
}
